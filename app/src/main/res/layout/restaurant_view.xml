<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >


        <ImageView
            android:id="@+id/restaurant_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/round_corners_mask"
            android:scaleType="centerCrop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/restaurant_photo_placeholder" />

        <TextView
            android:id="@+id/restaurant_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/restaurant_address_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/restaurant_img"
            app:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/restaurant_address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 rue de l'artillerie"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/restaurant_opening_status_txt"
            app:layout_constraintLeft_toLeftOf="@id/restaurant_name_txt"
            app:layout_constraintTop_toBottomOf="@id/restaurant_name_txt" />

        <TextView
            android:id="@id/restaurant_opening_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open until 7pm"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/restaurant_img"
            app:layout_constraintLeft_toLeftOf="@+id/restaurant_name_txt"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_address_txt" />

        <TextView
            android:id="@+id/restaurant_distance_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="120m"
            android:textSize="18sp"
            app:layout_constraintRight_toLeftOf="@id/restaurant_img"
            app:layout_constraintTop_toTopOf="@id/restaurant_img" />

        <TextView
            android:id="@+id/restaurant_workmates_frequentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(3)"
            app:layout_constraintBottom_toTopOf="@id/restaurant_star_3_img"
            app:layout_constraintRight_toRightOf="@id/restaurant_distance_txt"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_distance_txt" />

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_person_outline_black_24dp"
            app:layout_constraintBottom_toBottomOf="@id/restaurant_workmates_frequentation"
            app:layout_constraintRight_toLeftOf="@id/restaurant_workmates_frequentation"
            app:layout_constraintTop_toTopOf="@id/restaurant_workmates_frequentation" />


        <ImageView
            android:id="@+id/restaurant_star_1_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_star_yellow"
            app:layout_constraintBottom_toBottomOf="@id/restaurant_img"
            app:layout_constraintRight_toRightOf="@id/restaurant_distance_txt" />

        <ImageView
            android:id="@+id/restaurant_star_2_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_star_yellow"
            app:layout_constraintBottom_toBottomOf="@id/restaurant_star_1_img"
            app:layout_constraintRight_toLeftOf="@id/restaurant_star_1_img" />

        <ImageView
            android:id="@+id/restaurant_star_3_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_star_yellow"
            app:layout_constraintBottom_toBottomOf="@id/restaurant_img"
            app:layout_constraintRight_toLeftOf="@id/restaurant_star_2_img" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@android:color/darker_gray"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
