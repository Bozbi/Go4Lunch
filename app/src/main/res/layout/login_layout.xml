<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_test_logo"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/google_btn"
        app:layout_constraintLeft_toLeftOf="@id/google_btn"
        app:layout_constraintRight_toRightOf="@id/facebook_btn"/>

    <Button
        android:id="@+id/google_btn"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_round_corners"
        android:drawableStart="@drawable/ic_google_logo"
        android:drawablePadding="24dp"
        android:fontFamily="@font/roboto_medium"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center|start"
        android:padding="8dp"
        android:paddingEnd="14dp"
        android:text="@string/google_sign_in_btn_txt"
        android:textAllCaps="false"
        android:textColor="#666666"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/facebook_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/facebook_btn"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/bg_round_corners_blue"
        android:clickable="true"
        android:drawableStart="@drawable/ic_facebook_logo"
        android:drawablePadding="24dp"
        android:focusable="true"
        android:fontFamily="@font/roboto_medium"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center|start"
        android:padding="8dp"
        android:text="@string/facebook_sign_in_btn_txt"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/google_btn"
        app:layout_constraintRight_toRightOf="@id/google_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>