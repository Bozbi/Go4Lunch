<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.RestaurantDetailActivity"
    >
    
    <ImageView
        android:id="@+id/restaurant_photo_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/restaurant_placeholder"
        android:scaleType="centerCrop"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/restaurant_check_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:src="@drawable/ic_check_circle_green_24dp"
        app:fabSize="mini"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_photo_img"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_photo_img"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_title_cstr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_photo_img"
        android:padding="15dp"
        >

        <TextView
            android:id="@+id/restaurant_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="La Boussole"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            />
        <TextView
            android:id="@+id/restaurant_address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 rue Saint-Jean du PÃ©rot"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_name_txt"
            app:layout_constraintLeft_toLeftOf="@id/restaurant_name_txt"
            android:textColor="@android:color/white"

            />

        <ImageView
            android:id="@+id/restaurant_star_1_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/restaurant_name_txt"
            android:src="@drawable/ic_star_yellow"
            android:baselineAlignBottom="true"
            app:layout_constraintBaseline_toBaselineOf="@id/restaurant_name_txt"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:id="@+id/restaurant_star_2_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/restaurant_star_1_img"
            android:src="@drawable/ic_star_yellow"
            android:baselineAlignBottom="true"
            app:layout_constraintBaseline_toBaselineOf="@id/restaurant_name_txt"
            />

        <ImageView
            android:id="@+id/restaurant_star_3_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintLeft_toRightOf="@id/restaurant_star_2_img"
            android:src="@drawable/ic_star_yellow"
            android:baselineAlignBottom="true"
            app:layout_constraintBaseline_toBaselineOf="@id/restaurant_name_txt"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_action_cstr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/block_title_cstr"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingVertical="15dp"
        android:paddingHorizontal="65dp"
        android:background="@android:color/white"
        android:elevation="5dp"
        >

        <LinearLayout
            android:id="@+id/phone_block_rlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/like_block_rlt"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_local_phone_black_24dp"
                android:tint="@color/colorPrimary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CALL"
                android:textColor="@color/colorPrimary"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/like_block_rlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/phone_block_rlt"
            app:layout_constraintRight_toLeftOf="@id/website_block_rlt"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_star_yellow"
                android:tint="@color/colorPrimary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIKE"
                android:textColor="@color/colorPrimary"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/website_block_rlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/like_block_rlt"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_earth"
                android:tint="@color/colorPrimary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WEBSITE"
                android:textColor="@color/colorPrimary"
                />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/block_action_cstr"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/workmates_view"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>